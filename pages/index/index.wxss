/**index.wxss**/
.scroll-view_H {
  width: 100%;
  height: 6rem;
  white-space: nowrap;
}

.scroll-view-item_H {
  height: 6rem;
  width: 13rem;
  margin-left: 10px;
  border-radius: 5px;
  display: inline-block;
  overflow: hidden;
  position: relative;
  background-size: auto 100%;
  background-repeat: no-repeat;
}

.scroll-view-item_H:first-child {
  margin-left: 0;
}

.scroll-view-item-desc-text {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 11;
  height: 100%;
  padding: 5px;
  background: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0));
  border-radius: 5px;
  box-sizing: border-box;
  color: #fff;
}

.classify-tab-box {
  width: 100%;
  white-space: nowrap;
  display: flex;
}

.classify-tab-item {
  flex: 1;
  display: inline-block;
  padding: 5px 10px;
  text-align: center;
  border-bottom: 2px solid transparent;
}

.classify-tab-item-on {
  border-bottom: 2px solid #f00;
  color: #f00;
}

.classify-content-box {
  padding-top: 10px;
  overflow: hidden;
}

.classify-content-item-box {
  width: 49%;
  float: left;
  height: 10rem;
  position: relative;
  margin-right: 2%;
  margin-bottom: 2%;
}

.classify-content-item-box:nth-child(2n) {
  margin-right: 0;
}

.classify-content-item-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.classify-content-item-text {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 2;
  background: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.3));
  color: #fff;
  padding: 5px;
  font-size: 0.8rem;
}

.classify-content-loading{
  display: block;
  text-align: center;
  font-size: .8rem;
  color: #999;
}