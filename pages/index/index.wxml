</scroll-view>

<view class="classify-content-box" style="display:{{ loading ? 'show' : 'none' }};">
  <text class="classify-content-loading">努力加载中···</text>
</view>

<view class="classify-content-box" style="display:{{ loading ? 'none' : 'show' }};">
  <navigator wx:for="{{listItem}}" wx:key="index" class="classify-content-item-box" url="{{item.jUrl}}">
    <image src="{{item.imgUrl}}" mode="aspectFill" class="classify-content-item-image" style="width:100%;"></image>
    <text class="classify-content-item-text">{{item.title}}</text>
  </navigator>
</view>