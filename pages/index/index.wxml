<!-- 分类视频 -->
<view class="title-text">分类视频</view>
<scroll-view class="classify-tab-box" scroll-x="true">
  <navigator class="classify-tab-item" url="../heroes/heroes">全部</navigator>
  <view class="classify-tab-item {{ tabStr == 'ss' ? 'classify-tab-item-on' : '' }}" data-url="../detail/detail?id=1" data-id="ss" bindtap="tabSwiper">射手</view>
  <view class="classify-tab-item {{ tabStr == 'fs' ? 'classify-tab-item-on' : '' }}" data-url="../detail/detail?id=1" data-id="fs" bindtap="tabSwiper">法师</view>
  <view class="classify-tab-item {{ tabStr == 'ck' ? 'classify-tab-item-on' : '' }}" data-url="../detail/detail?id=1" data-id="ck" bindtap="tabSwiper">刺客</view>
